{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "types": ["@types/react", "@types/react-dom", "vite/client"]
  },
  "include": [
    "resources/js/**/*",
    "vite.config.ts"
  ]
}
